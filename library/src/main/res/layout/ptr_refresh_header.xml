<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listview_header_content"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ptr_height"
    android:gravity="center">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/ptr_arrow"
            android:layout_width="@dimen/ptr_icon_size"
            android:layout_height="@dimen/ptr_icon_size"
            android:background="@android:color/transparent"
            android:src="@drawable/ptr_default_arrow" />

        <ProgressBar
            android:id="@+id/ptr_progressbar"
            style="@style/loading_progressBar_style"
            android:layout_width="@dimen/ptr_icon_size"
            android:layout_height="@dimen/ptr_icon_size"
            android:visibility="gone" />

    </FrameLayout>

    <TextView
        android:id="@+id/ptr_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ptr_text_margin"
        android:layout_marginStart="@dimen/ptr_text_margin"
        android:text="@string/ptr_normal"
        android:textSize="@dimen/ptr_text_size" />

</LinearLayout>
